        <div class="p-5">
            {% include 'compte/compte_nav/nav.html.twig' %}
        </div>
    </div>

    <div class="container px-10 mb-5">
        {% for commande in commandes %}
            <div class="card mx-20 mb-5">
                <div class="card-header">
                    <div class="row">
                        <div class="col text-start">Commande NÂ° {{ commande.numero }}</div>
                        <div class="col text-end">Etat</div>
                    </div>
                </div>

